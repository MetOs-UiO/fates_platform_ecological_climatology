<!-- SAMPLE INPUT SPECIFICATION FOR CAM-OSLO  --> 

<CamOsloInputConfiguration>

	<inputDataPath name="/disk1/alfg/linkToNorstoreEmissions"/>
	<outputDataPath name="/disk1/alfg/camOsloEmis"/>

	<outputfiles>

		<!--START COMPONENT BLACK CARBON -->

		<!-- HISTORICAL EVOLUTION OF BC FOSSIL FUEL EMISSIONS  -->
		<outputfile
					name="BC_ff_1850_2005.nc"
					field="emis_bc_ff"
					component="BC"
		  	  		provider="IPCC"
					scenario="historical"
					source="ff"
					>
			<inputfile 
	    	  			name="cmipemis/IPCC_emissions_BC_anthropogenic_$year$_0.5x0.5_v1_21_05_2009.nc"
		      			year="1850,1860">
				<fields>
					<field name="emiss_dom" sector="domestic"/>
					<field name="emiss_ene" sector="energy"/>
					<field name="emiss_ind" sector="industry"/>
					<field name="emiss_tra" sector="traffic"/>
					<field name="emiss_wst" sector="wasteburning"/>
					<field name="emiss_awb" sector="agriculturalwaste"/>
		  		</fields>
			</inputfile>
		</outputfile>

  </outputfiles>
</CamOsloInputConfiguration>
