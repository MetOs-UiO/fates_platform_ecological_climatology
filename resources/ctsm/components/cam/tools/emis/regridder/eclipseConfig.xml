<?xml version='1.0' encoding='us-ascii'?> 

<!-- SAMPLE INPUT SPECIFICATION FOR CAM-OSLO  --> 

<CamOsloInputConfiguration>

	<inputDataPath name="/disk1/alfg/linkToEclipseEmis"/>
	<outputDataPath name="/disk1/alfg/camOsloEmis"/>

	<outputfiles>

		<!--START COMPONENT BLACK CARBON -->

		<!-- HISTORICAL EVOLUTION OF BC FF AIRCRAFT  -->
		<outputfile
                    name="BC_air_eclipse_2000_2070.nc"
                    field="emis_bc_air"
                    component="BC"
                    provider="eclipse"
                    scenario="RCP45"
                    source="air"
                    levels="26"
                    levelValues="0.29 , 0.48 , 0.84 , 1.4 , 2.2 , 3.2 , 4.3 , 5.6 , 6.8 , 7.9 , 9.1 , 10.2 , 11.2 , 12.2, 13.2 ,14.2 , 15.2 , 16.2 , 17.1 , 18.3 , 20.0 , 22.3 , 25.12 , 28.7 , 32.9 , 37.9">
            <inputfile 
                        name="IPCC_emissions_RCP45_BC_aircraft_$year$_0.5x0.5_v1_21_12_2009.nc"
                        year="2000,2005,2010,2020,2030,2040,2050,2060,2070">
                <fields>
                    <!-- possible fields are emissionLevel=n, output=override.nc"-->
                    <field name="emiss_air" sector="aircraft" conversion="multiplyByHeight"/>
                </fields>
            </inputfile>

        </outputfile>


		<!--THIS MERGES EMISSIONS FOR ANTHROPOGENIS AND SHIPS IN SAME FILES.. RECORDS ON SAME DATES WILL BE MERGED -->
		<!--NOTE: PROBLEM WITH DATES IN CURRENT SHIPPING FILE MAKES THIS OUTPUT QUITE STRANGE.. NEED TO FIX THAT -->
		<outputfile
			name="BC_ff_eclipse_2000_2070.nc"
			field="emis_bc_ff"
			component="BC"
			source = "ff"
			provider="eclipse"
			scenario="RCP45">
			<inputfile 
                        name="IPCC_emissions_RCP45_BC_anthropogenic_$year$_0.5x0.5_v1_21_12_2009.nc"
                        year="2000,2005,2010,2020,2030,2040,2050,2060,2070">
                <fields>
                    <field name="emiss_dom" sector="domestic"/>
                    <field name="emiss_ene" sector="energy"/>
                    <field name="emiss_ind" sector="industry"/>
                    <field name="emiss_tra" sector="traffic"/>
                    <field name="emiss_wst" sector="wasteburning"/>
                    <field name="emiss_awb" sector="agriculturalwaste"/>
					<field name="emiss_slv" sector="solvents"/>
					<field name="emiss_agr" sector="agriculture"/>
                </fields>
            </inputfile>

			<inputfile 
	    	  			name="IPCC_emissions_RCP45_BC_ships_$year$_0.5x0.5_v1_21_12_2009.nc"
		      			year="2000,2005,2010,2020,2030,2040,2050,2060,2070">
				<fields>
					<field name="emiss_shp" sector="ships"/>
		  		</fields>
			</inputfile>
		</outputfile>

		<outputfile
			name="BC_bb_eclipse_2000_2070.nc"
			field="emis_bb_ff"
			component="BC"
			source = "bb"
			provider="eclipse"
			scenario="RCP45">
			<inputfile 
                        name="IPCC_emissions_RCP45_BC_biomassburning_$year$_0.5x0.5_v1_21_12_2009.nc"
                        year="2000,2005,2010,2020,2030,2040,2050,2060,2070">
                <fields>
                    <field name="grassfire" sector="grassfire"/>
                    <field name="forestfire" sector="forestfire"/>
                </fields>
            </inputfile>

		</outputfile>

  </outputfiles>


</CamOsloInputConfiguration>
